<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RealTimeSignUp"
    android:weightSum="6"
    android:background="@drawable/gradient1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Registration Details"
            android:textColor="#000000"
            android:textSize="60sp"
            android:textAlignment="center"
            android:textStyle="bold"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="3.25"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_weight="4"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your name"
                    android:textColorHint="#FFFFFF"
                    android:backgroundTint="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/userName"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your mobile number"
                    android:textColorHint="#FFFFFF"
                    android:backgroundTint="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/mobileNumber"
                    android:inputType="phone"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your room number"
                    android:textColorHint="#FFFFFF"
                    android:backgroundTint="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/roomNumber"
                    android:inputType="text"
                    android:layout_marginBottom="10dp"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/deptSpinner"
                    android:backgroundTint="#000000"
                    android:popupBackground="#000000"
                    android:layout_marginBottom="10dp"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bloodGroupSpinner"
                    android:backgroundTint="#000000"
                    android:popupBackground="#000000"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    >

                    <EditText
                        android:layout_weight="0.75"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:hint="@string/enter_your_birthday_or"
                        android:textColorHint="#FFFFFF"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:id="@+id/bdayText"
                        android:inputType="date"
                        />

                    <Button
                        android:layout_weight="0.25"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/choose"
                        android:id="@+id/bdaydatePicker"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        style="@style/Widget.AppCompat.Button.Colored"
                        />
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_your_permanent_address"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:id="@+id/permanentAddress"
                    android:inputType="text"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#000000"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_your_father_s_name"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:id="@+id/fathersName"
                    android:inputType="text"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#000000"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your mother's name"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:id="@+id/mothersName"
                    android:inputType="text"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#000000"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your gurdian phone number"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:id="@+id/gurdianPhoneNumber"
                    android:inputType="phone"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#000000"
                    />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Submit Details"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/mybutton"
            android:id="@+id/submitButton"
            />
    </LinearLayout>

</LinearLayout>